<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fa fa-tree" aria-hidden="true"></i> Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row">
            <% if(noResults !== undefined) { %>
                <div class="col-lg-12 text-center">
                    <h3><%= noResults %></h3>
                    <br>
                    <div class="container">
                        <div class="row justify-content-center">
                            <form action="/campgrounds" method="GET" class="form-inline">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="search" placeholder="Campground search...">
                                    <input class="btn btn-dark" type="submit" value="Search">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="col-lg-12">
                    <h4>Here is a full listing of campgrounds in our database!</h4> 
                    <br>
                </div>
            <% } %>        
    </div>

    <div class="row text-center">
        <% campgrounds.forEach((camp) => { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img src="<%= camp.image %>" class="card-img-top" alt="<%= camp.name %>">
                    <div class="card-body">
                      <h5 class="card-title"><%= camp.name %></h5>
                      <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                    </div>
                  </div>
            </div>
        <% }); %>
    </div>
    
</div>

<% include ../partials/footer %>
